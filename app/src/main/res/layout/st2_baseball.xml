<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dip"
    android:layout_height="450dip"
    android:background="@drawable/st2_baseball_game">

    <EditText
        android:id="@+id/st2_baseball_txt"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="124dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/st2_baseball_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/st2_baseball_listView" />

    <Button
        android:id="@+id/st2_baseball_btn"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="160dp"
        android:text="Hit"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/st2_baseball_txt"
        app:layout_constraintTop_toBottomOf="@+id/st2_baseball_listView" />

    <ListView
        android:id="@+id/st2_baseball_listView"
        android:layout_width="150dip"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="13dp"
        android:textColor="#ffffff"
        android:divider="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/st2_baseball_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>