<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dip"
    android:layout_height="450dip">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="45dp"
        android:text="시계가 2시 11분 언저리에 멈춰있다.\nQ. 시침과 분침은 몇 번 겹치는가?"
        app:layout_constraintBottom_toTopOf="@+id/st2_clock_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/st2_clock_image"
        android:layout_width="0dp"
        android:layout_height="164dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="47dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/st2_clock_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/st2_clock" />

    <EditText
        android:id="@+id/st2_clock_txt"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/st2_clock_btn"
        app:layout_constraintEnd_toStartOf="@+id/st2_clock_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/st2_clock_btn" />

    <Button
        android:id="@+id/st2_clock_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="77dp"
        android:onClick="clock_input_click"
        android:text="입력"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/st2_clock_txt"
        app:layout_constraintTop_toBottomOf="@+id/st2_clock_image" />
</android.support.constraint.ConstraintLayout>