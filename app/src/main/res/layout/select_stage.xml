<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectStage"
    android:background="#ff000000">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:srcCompat="@drawable/title" />

    <Button
        android:id="@+id/goStage1"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="0dp"
        android:background="@drawable/stage1_btn"
        android:padding="0dp" />

    <Button
        android:id="@+id/goStage2"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/stage2_rock_btn"
        android:layout_margin="0dp"
        />

    <Button
        android:id="@+id/goStage3"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/stage3_rock_btn"
        android:layout_margin="0dp"/>

</LinearLayout>